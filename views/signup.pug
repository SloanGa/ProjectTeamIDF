extends layout.pug 

block content
    form(class="w-5/12 min-h-screen m-auto font-nav1 flex flex-col justify-center" action="/users" method="post" id='createUser' )
      .mb-5
        label.block.mb-2.text-sm.text-gray-900(for='email') Votre email
        input#email.shadow-sm.bg-white.border.border-gray-300.text-gray-500.text-sm.rounded-lg.block.w-full.outline-none(type='email', class='focus:ring-[#62b5e5] focus:border-[#62b5e5] p-2.5', placeholder='name@flowbite.com',name="email" required="")
      .mb-5
        label.block.mb-2.text-sm.text-gray-900(for='username') Votre nom
        input#userName.shadow-sm.bg-white.border.border-gray-300.text-gray-500.text-sm.rounded-lg.block.w-full.outline-none(type='text', class='focus:ring-[#62b5e5] focus:border-[#62b5e5] p-2.5',placeholder="Jean",name="username" required="")
      .mb-5
        label.block.mb-2.text-sm.text-gray-900(for='password') Votre mot de passe
        input#password.shadow-sm.bg-white.border.border-gray-300.text-gray-500.text-sm.rounded-lg.block.w-full.outline-none(type='password', class='focus:ring-[#62b5e5] focus:border-[#62b5e5] p-2.5',placeholder="*********" name="password" required="")
      .mb-5
        label.block.mb-2.text-sm.text-gray-900(for='team') Votre équipe
        select#team.shadow-sm.bg-white.border.border-gray-300.text-gray-500.text-sm.rounded-lg.block.w-full.outline-none(type='text', class='focus:ring-[#62b5e5] focus:border-[#62b5e5] p-2.5' name="team" required="")
          option(selected='' value="No team") Choissisez votre équipe
          
          if teams
            each team in teams 
              option(value=team.id) #{team.teamname} 
          
      button.rounded-lg.text-sm.px-5(type='submit', class='text-white font-medium rounded-lg px-4 py-2 text-center bg-[#62b5e5] transition-all focus:opacity-[0.85] shadow-md shadow-cyan-600/40 active:opacity-[0.85] xl:text-sm sd:text-xs') Crée un compte
      